<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/permit_item_smallThumbnail"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_constraintTop_toTopOf="parent"
            android:layout_constraintEnd_toStartOf="@id/permit_item_rightLayout"/>

        <LinearLayout
            android:id="@+id/permit_item_rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_constraintEnd_toEndOf="@+id/permit_item_smallThumbnail"
            android:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/permit_employee_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/permit_employee_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>